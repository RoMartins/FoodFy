{% extends "session/header.njk" %}

{% block content %}

<section class="LoginForm">
    <h2>Nova Senha</h2>
        <form action="/password-reset" method="POST"  >

    <div class="form">

             <div class="item">
            <div>Email</div>
            <div class="input">
                <input type="text" name="email" 
                value="{{user.email}}"
            placeholder="Digite seu email" >

            </div>
        </div>

        <div class="item">
        <div>Nova Senha</div>
        <div class="inputPRO">
            <input type="password" 
            name="password" 
            placeholder="Digite sua nova senha " >

        </div>
    
    </div>

    <div class="item">
        <div>Repetir Senha</div>
        <div class="inputPRO">
            <input type="password" 
            name="passwordRepeat" 
            placeholder="Repita a nova senha " >

        </div>
    
    </div>

    <div class="form2">
        <a href="#"></a>
        <button type="submit">Nova Senha</button>

    </div>        
    <input type="hidden" name="token" value="{{token}}">

        </form>

</section>

{% endblock content %}